<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.raymond.gossipgirl">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="false"
        android:hardwareAccelerated="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme"
        android:name="com.raymond.gossipgirl.AppObj">

        <activity android:name="com.raymond.gossipgirl.GGWelcomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.facebook.flipper.android.diagnostics.FlipperDiagnosticActivity"
            android:exported="true"/>
        <activity android:name=".GGConfirmUsernameActivity"
            android:label="@string/title_confirm_username"/>
        <activity android:name=".GGUsernameActivity"
            android:label="@string/title_select_username"/>
        <activity android:name=".GGLocationActivity"
            android:label="@string/title_location_services"/>
        <activity android:name=".GGNameChangePetitionActivity"
            android:label="@string/title_name_change_petition"/>
        <activity android:name=".GGRequestReceivedActivity"
            android:label="@string/title_request_received"/>
        <activity android:name=".GGEditProfileActivity"
            android:theme="@style/ChatSDKSlidingTransactionTheme"/>

        <!--Contact Book-->
        <meta-data android:name="contact_book_invite_contact_email_subject" android:value="@string/contact_book_email_subject" />
        <meta-data android:name="contact_book_invite_contact_email_body" android:value="@string/contact_book_email_body" />
        <meta-data android:name="contact_book_invite_contact_sms_body" android:value="@string/contact_book_sms_body" />

        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id" tools:replace="android:value"/>
        <meta-data android:name="com.google.android.geo.API_KEY" android:value="AIzaSyCwwtZrlY9Rl8paM0R6iDNBEit_iexQ1aE"/>
    </application>

</manifest>
