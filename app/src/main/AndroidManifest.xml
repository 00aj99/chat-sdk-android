<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.raymond.gossipgirl">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="false"
        android:hardwareAccelerated="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme"
        android:name="com.raymond.gossipgirl.AppObj">

        <activity android:name="com.raymond.gossipgirl.WelcomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.facebook.flipper.android.diagnostics.FlipperDiagnosticActivity"
            android:exported="true"/>
        <activity android:name=".ConfirmUsernameActivity"
            android:label="@string/title_confirm_username"/>
        <activity android:name=".GossipGirlUsernameActivity"
            android:label="@string/title_select_username"/>
        <activity android:name=".LocationActivity"
            android:label="@string/title_location_services"/>
        <activity android:name=".SocialLogin"
            android:label="@string/title_social_login"/>
        <activity android:name=".NameChangePetitionActivity"
            android:label="@string/title_name_change_petition"/>
        <activity android:name=".RequestReceivedActivity"
            android:label="@string/title_request_received"/>

        <!--<activity android:name="co.chatsdk.firebase.ui.SplashScreenActivity">-->
