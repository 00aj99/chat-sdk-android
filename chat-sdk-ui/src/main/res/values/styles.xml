<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- For the sliding affect to look good in the chat context and pick friends context.-->
    <style name="ChatSDKSlidingTransactionTheme" parent="@style/SdkTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- TextView Style-->
    <style name="TextViewStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="TextViewStyleSmall">
        <item name="android:textSize">13dp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="MessageDateStyle">
        <item name="android:textSize">13dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!--Login Activity Button style-->
    <style name="LoginButtonsStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <!--Circle image view style-->
    <style name="CircleIconStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="ThreadListCircleIconStyle" parent="CircleIconStyle">
        <item name="android:layout_margin">3dp</item>
    </style>

    <!--Row Margins-->
    <style name="RowStyle">
        <item name="android:padding">2dp</item>
    </style>

    <!--Message Option Button Style-->
    <style name="MessageOptionButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/chat_sdk_option_button_text_color_selector</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ImagePopupAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>
