<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.chatsdk.ui">

    <!--For capturing photos in profile and chat UI-->
    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:supportsRtl="true"
        android:hardwareAccelerated="true"
        >

        <activity android:name=".activities.LoginActivity"
            android:screenOrientation="portrait"
            android:launchMode = "singleTask"
            android:theme="@style/ChatSDKTheme">
        </activity>

        <activity android:name=".activities.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:launchMode = "singleTask"
            android:theme="@style/ChatSDKTheme">
        </activity>

        <activity android:name=".activities.ThreadDetailsActivity"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/ChatSDKSlidingTransactionTheme"/>

        <activity android:name=".activities.ThreadEditDetailsActivity"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/ChatSDKSlidingTransactionTheme"/>

        <activity android:name=".activities.CKChatActivity"
            android:parentActivityName=".activities.MainAppBarActivity"
            android:launchMode = "singleTop"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:theme="@style/ChatSDKSlidingTransactionTheme"/>

        <activity android:name=".activities.EditProfileActivity"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/ChatSDKTheme"/>

        <activity android:name=".activities.SearchActivity"
            android:windowSoftInputMode="stateVisible"
            android:theme="@style/ChatSDKTheme"/>

        <activity android:name=".activities.ProfileActivity"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/ChatSDKTheme"/>

        <activity android:name=".activities.MainAppBarActivity"
            android:launchMode = "singleTask"
            android:theme="@style/ChatSDKTheme"
            android:windowSoftInputMode="stateHidden|adjustResize"/>

        <activity android:name=".activities.AddUsersToThreadActivity"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/ChatSDKSlidingTransactionTheme"/>

        <activity android:name=".activities.CreateThreadActivity"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/ChatSDKSlidingTransactionTheme"/>

        <activity android:name=".activities.ForwardMessageActivity"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/ChatSDKSlidingTransactionTheme"/>

        <!--Crop image-->
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />

        <!-- Google Maps Metadata-->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="co.chatsdk.file-provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"/>
        </provider>


    </application>
</manifest>
